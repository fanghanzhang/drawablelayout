<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tab_appearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#cdcdcd</item>
    </style>

    <style name="mratingbar">
        <item name="android:progressDrawable">@drawable/wujioaxingdrable</item>
        <item name="android:maxHeight">35dp</item>
        <item name="android:minHeight">35dp</item>
    </style>

    <style name="Toolbar_TextAppearance_White">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
